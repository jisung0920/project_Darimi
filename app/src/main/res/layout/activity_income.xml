<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cfeeff"
    android:weightSum="6"
    android:padding="30dp"
    tools:context="com.example.jisung.darimi.IncomeActivity"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/b1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:src="@drawable/back"
            android:scaleType="fitXY"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/b2"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:src="@mipmap/ic_launcher" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="40dp"
            android:textColor="@color/TextColor"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-04-23"
            android:layout_gravity="bottom"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="40dp"
            android:background="#4271e9"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 매출" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/day"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:onClick="onClick"
                    android:src="@drawable/day_noclick" />

                <ImageButton
                    android:id="@+id/month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:onClick="onClick"

                    android:src="@drawable/month_noclick" />

                <ImageButton
                    android:id="@+id/year"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:onClick="onClick"
                    android:src="@drawable/year_noclick" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CalendarView
                    android:id="@+id/cal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:onClick="onClick" />

                <ImageView
                    android:id="@+id/yearchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#cfeeff"
                    android:scaleType="fitXY"
                    android:src="@drawable/yearchat"
                    android:visibility="invisible" />


            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eeee"
            android:orientation="vertical">

            <ImageView
                android:background="#cfeeff"
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:src="@drawable/today" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
