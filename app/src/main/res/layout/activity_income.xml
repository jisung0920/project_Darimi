<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cac8c8"
    android:weightSum="6"
    android:padding="30dp"
    tools:context="com.example.jisung.darimi.IncomeActivity"
    >
    <LinearLayout
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/b1"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:src="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/b2"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:onClick="onClick"
            android:src="@mipmap/ic_launcher" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="40dp"
            android:textColor="@color/TextColor"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-04-23"
            android:layout_gravity="bottom"
            />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <CalendarView
                android:onClick="onClick"
                android:clickable="true"
                android:background="@color/colorPrimary"
                android:id="@+id/cal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:padding="50dp"
            android:background="#eeee"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:visibility="invisible"
                android:background="#ffff"
                android:textColor="@color/TextColor"
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:layout_marginBottom="10dp"
                android:text="4월 20일                  단위(원)" />

            <TextView
                android:visibility="invisible"
                android:textSize="30dp"
                android:text="정지성                                9000원"
                android:textColor="@color/TextColor"
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:visibility="invisible"
                android:textColor="@color/TextColor"
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="문소연                               10000원" />

            <TextView
                android:visibility="invisible"
                android:textColor="@color/TextColor"
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="서수민                               15000원"/>

            <TextView
                android:visibility="invisible"
                android:textColor="@color/TextColor"
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="남궁선                                6000원"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:visibility="invisible"
                android:textColor="@color/TextColor"
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text=" 합 계                     40000원"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
